<Window x:Class="WizardTea.Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WizardTea.Visualizer"
        mc:Ignorable="d"
        Title="WizardTea NIF Visualizer" Width="800" Height="600">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="FileOpen" Header="Open..." Click="FileOpen_Click" />
                <Separator />
                <MenuItem x:Name="FileExit" Header="Exit" Click="FileExit_Click" />
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
